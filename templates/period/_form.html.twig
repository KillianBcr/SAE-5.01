{% extends 'base.html.twig' %}

{% block title %}
    Création d'une période
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Création d'une période</h1>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.weekStart) }}
            {{ form_widget(form.weekStart, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.weekStart) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.weekEnd) }}
            {{ form_widget(form.weekEnd, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.weekEnd) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Créer</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
