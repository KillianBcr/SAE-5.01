{% extends 'base.html.twig' %}

{% block title %}Création de voeu{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="mt-4">Création d'un voeu</h1>

        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.chosenGroups) }}
            {{ form_widget(form.chosenGroups) }}
            <div class="form-error">
                {{ form_errors(form.chosenGroups) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.groupeType) }}
            {{ form_widget(form.groupeType) }}
            <div class="form-error">
                {{ form_errors(form.groupeType) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>

{% endblock %}